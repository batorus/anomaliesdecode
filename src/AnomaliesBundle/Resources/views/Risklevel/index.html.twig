{#{% extends '::base.html.twig' %}#}

{% block body -%}
    <h1>Risklevel list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Risklevel</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.risklevel }}</td>
                <td>{{ entity.enabled }}</td>
                <td>
                    <ul>

                        <li>
                            <a href="{{ path('risklevel_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <ul>
        <li>
            <a href="{{ path('risklevel_new') }}">
                Create a new entry
            </a>
        </li>

    </ul>

    {% endblock %}
